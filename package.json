{
  "name": "unified-liquidity-nfts",
  "version": "1.0.0",
  "description": "Unified Liquidity NFTs powered by Euclid Protocol on Archway",
  "main": "index.js",
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "prepare": "husky install",
    "frontend": "cd frontend && npm run dev",
    "build": "npm run build:contracts && npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "build:contracts": "cd contracts && cargo build",
    "test": "npm run test:contracts && npm run test:frontend",
    "test:contracts": "cd contracts && cargo test",
    "test:frontend": "cd frontend && npm test",
    "deploy:testnet": "NETWORK=testnet ts-node scripts/deploy.ts",
    "deploy:mainnet": "NETWORK=mainnet ts-node scripts/deploy.ts",
    "validate:config": "ts-node -e 'require(\"./config/utils\").validateConfig()'",
    "lint": "npm run lint:frontend && npm run lint:contracts",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:contracts": "cd contracts && cargo clippy",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "keywords": [
    "archway",
    "euclid",
    "nft",
    "defi",
    "blockchain",
    "cosmwasm"
  ],
  "author": "",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.1",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@archwayhq/arch3.js": "^0.6.2",
    "@cosmjs/cosmwasm-stargate": "^0.32.2",
    "@cosmjs/proto-signing": "^0.32.2",
    "dotenv": "^16.4.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
